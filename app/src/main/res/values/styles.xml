<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="m">@color/colorToolbar</item>
        <item name="actionMenuTextColor">@color/textPrimaryDark</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" >
        <item name="popupMenuBackground">@color/colorToolbar</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:iconTint" tools:targetApi="o">@color/textPrimary</item>
        <item name="actionMenuTextColor">@color/textPrimary</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme.NoActionBar"> 
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Menu" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="actionMenuTextColor">@color/textPrimary</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/textPrimary</item>
        <item name="android:textSize">@dimen/padding10</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:fillBefore">@android:color/white</item>
        <item name="colorControlActivated">@color/textPrimary</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerSize">30%</item>
        <item name="color">@color/alert</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_round</item>
    </style>

</resources>